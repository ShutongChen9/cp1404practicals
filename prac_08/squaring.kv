BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.5

        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
            hint_text: 'Enter a number'

        Button:
            text: 'Square'
            font_size: 36
            on_press: app.handle_calculate(float(input_number.text))

        Label:
            id: output_label
            font_size: 48
            color: (1, 0.5, 0.5, 1)

    BoxLayout:
        size_hint_y: 0.5
        Label:
            text: "Enter a number and press Square"
            font_size: 36